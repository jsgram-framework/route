{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"sourceMap": true,
		"lib": ["es5", "es6"],
		"outDir": "./dist",
		"rootDirs": [
			"./src",
			"./test"
		],
		"moduleResolution": "node",
		"declaration": true
	},
	"include": [
		"src/", "test/"
	],
	"exclude": [
		"node_modules"
	]
}